#!/bin/bash
# simple dmenu power menu

DMENU='dmenu -i -fn IBMPlexMono:semibold:size=12 -nb #000000 -p Power:'
choice=$(echo -e "sleep\nlogout\nreboot\nshutdown" | $DMENU)

case "$choice" in
	sleep) ~/owncloud/Linux/scripts/sleeplock ;;
	logout) killall dwm ;;
	reboot) reboot ;;
	shutdown) shutdown now ;;
esac
